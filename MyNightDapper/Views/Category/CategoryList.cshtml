@model List<MyNightDapper.Dtos.CategoryDtos.ResultCategoryDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Kategori Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .table th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-action {
            margin-right: 5px;
        }

        .btn-add {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Kategori Listesi</h1>
        <div class="d-flex justify-content-end">
            <a href="/Category/CreateCategory/" class="btn btn-success btn-add">+ Yeni Kategori Ekle</a>
        </div>
        <table class="table table-bordered table-hover shadow-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>@category.CategoryName</td>
                            <td>
                                <a href="/Category/UpdateCategory/@category.CategoryId" class="btn btn-primary btn-sm btn-action">Güncelle</a>
                                <form asp-action="DeleteCategory" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@category.CategoryId" />
                                    <button type="submit" class="btn btn-danger btn-sm btn-action">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">Hiç kategori bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

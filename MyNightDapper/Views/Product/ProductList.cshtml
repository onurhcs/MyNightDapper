@model List<MyNightDapper.Dtos.ProductDtos.ResultProductDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ürün Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Ürün Listesi</h2>
        <a href="/Product/Create" class="btn btn-success mb-3">+ Yeni Ürün Ekle</a>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ürün Adı</th>
                    <th>Stok</th>
                    <th>Fiyat</th>
                    <th>Kategori ID</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.ProductName</td>
                            <td>@product.ProductStock</td>
                            <td>@product.ProductPrice ₺</td>
                            <td>
                                <a href="/Product/Details/@product.ProductId" class="btn btn-info btn-sm">Detay</a>
                                <a href="/Product/Update/@product.ProductId" class="btn btn-warning btn-sm">Güncelle</a>
                                <form asp-action="Delete" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center">Hiç ürün bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

@model IEnumerable<MyNightDapper.Dtos.SpofityDtos.ResultSpotifyDto>

<div class="container">
    <div class="card-body">
        <h4 class="card-title text-center mb-4">Spotify Top Tracks</h4>
        <div class="row g-4">
            @foreach (var item in Model.Take(6))
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <!-- Müzik İkonu -->
                            <div class="mb-3">
                                <i class="fas fa-music fa-3x text-primary"></i>
                            </div>
                            <!-- Şarkı Adı -->
                            <h5 class="text-dark font-weight-bold mb-2">@item.track_name</h5>
                            <!-- Sanatçı ve Tür -->
                            <p class="text-muted small mb-1">Artist: <span class="text-primary">@item.artist_name</span></p>
                            <p class="text-muted small">Genre: <span class="text-secondary">@item.genre</span></p>
                            <!-- Popülerlik Rozeti -->
                            <span class="badge
                                @(item.popularity >= 80 ? "badge-popularity-high" :
                                  (item.popularity >= 60 ? "badge-popularity-medium" : "badge-popularity-low"))">
                                Popularity: @item.popularity
                            </span>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@model MyNightDapper.Dtos.ProductDtos.UpdateProductDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ürün Güncelle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Ürün Güncelle</h2>
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="mb-3">
                <label class="form-label">Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Stok</label>
                <input asp-for="ProductStock" class="form-control" type="number" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Fiyat</label>
                <input asp-for="ProductPrice" class="form-control" type="number" step="0.01" required />
            </div>
           
            <button type="submit" class="btn btn-warning">Güncelle</button>
            <a href="/Product/Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</body>
</html>

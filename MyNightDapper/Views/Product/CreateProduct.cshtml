@model MyNightDapper.Dtos.ProductDtos.CreateProductDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yeni Ürün Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Yeni Ürün Ekle</h2>
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="ProductName" class="form-label">Ürün Adı</label>
                <input asp-for="ProductName" class="form-control" id="ProductName" required />
            </div>
            <div class="mb-3">
                <label for="ProductStock" class="form-label">Stok</label>
                <input asp-for="ProductStock" class="form-control" id="ProductStock" type="number" required />
            </div>
            <div class="mb-3">
                <label for="ProductPrice" class="form-label">Fiyat</label>
                <input asp-for="ProductPrice" class="form-control" id="ProductPrice" type="number" step="0.01" required />
            </div>
           
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="/Product/Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</body>
</html>

@model MyNightDapper.Dtos.ProductDtos.GetByIdProductDto

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ürün Detayları</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Ürün Detayları</h2>
        <ul class="list-group">
            <li class="list-group-item">ID: @Model.ProductId</li>
            <li class="list-group-item">Ürün Adı: @Model.ProductName</li>
            <li class="list-group-item">Stok: @Model.ProductStock</li>
            <li class="list-group-item">Fiyat: @Model.ProductPrice</li>
        </ul>
        <a href="/Product/Index" class="btn btn-secondary mt-3">Geri</a>
    </div>
</body>
</html>
